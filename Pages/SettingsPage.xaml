<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookStore.Pages.SettingsPage"
             Title="SettingsPage">
    
    <VerticalStackLayout>
        <Label 
            Text="Choose the theme that's right for you"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="10"/>
        
        <Button
            x:Name="light"
            Text="Light theme"
            SemanticProperties.Hint="Change theme to light mode"
            Clicked="light_Clicked"
            HorizontalOptions="Center" />
        <Button
            x:Name="Dark"
            Text="Dark theme"
            SemanticProperties.Hint="Change theme to dark mode"
            Clicked="EnterLight"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>